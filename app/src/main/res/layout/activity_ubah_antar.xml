<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context="com.example.rizki.transportptba.UbahAntarActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perubahan Jadwal Antar"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textSize="4mm" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kode Pemesanan Antar"/>
        <EditText
            android:id="@+id/ubah_kode_antar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_cari_antar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Cari"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_data_ubah_antar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/layout_text_tanggal_antar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
        <TextView
            android:id="@+id/tanggal_antar_lama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="4mm"/>
        <LinearLayout
            android:id="@+id/layout_text_waktu_antar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
        <TextView
            android:id="@+id/waktu_antar_lama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="4mm"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_ubah_antar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Tanggal Antar Baru"/>
        <EditText
            android:id="@+id/tanggal_p_antar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Waktu Antar Baru"
            />
        <Spinner
            android:id="@+id/waktu_p_antar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/waktu"
            />
        <LinearLayout
            android:id="@+id/layout_btn_ubah_antar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</ScrollView>

</android.support.design.widget.CoordinatorLayout>
