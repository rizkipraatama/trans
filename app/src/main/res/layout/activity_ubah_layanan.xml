<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context="com.example.rizki.transportptba.UbahLayananActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perubahan Jadwal Layanan"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:textSize="4mm" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kode Pemesanan Layanan"/>
            <EditText
                android:id="@+id/ubah_kode_layanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_cari_layanan"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Cari"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layout_data_ubah_layanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:id="@+id/layout_text_tanggal_layanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <TextView
                android:id="@+id/tanggal_mulai_layanan_lama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="4mm"/>
            <LinearLayout
                android:id="@+id/layout_text_tanggal_layanan2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <TextView
                android:id="@+id/tanggal_selesai_layanan_lama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="4mm"/>
            <LinearLayout
                android:id="@+id/layout_text_waktu_layanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <TextView
                android:id="@+id/waktu_layanan_lama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="4mm"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layout_ubah_layanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
            </ScrollView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tanggal Mulai Layanan Baru"/>
            <EditText
                android:id="@+id/tanggal_p_layanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Waktu Mulai Layanan Baru"
                />
            <EditText
                android:id="@+id/waktu_p_layanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Tanggal Selelsai Layanan baru"
                />
            <EditText
                android:id="@+id/tanggal_p_layanan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/layout_btn_ubah_layananan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
